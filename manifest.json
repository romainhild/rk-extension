{
    "name": "Runkeeper-data",
    "version": "0.1",
    "description": "Get Runkeeper data",
    "icons": {
      "32": "images/running32.png",
      "48": "images/running48.png",
      "64": "images/running64.png",
      "128": "images/running128.png"
    },
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title":"Get Runkeeper data",
        "default_popup": "popup.html",
        "default_icon": {
            "32": "images/running32.png",
            "48": "images/running48.png",
            "64": "images/running64.png",
            "128": "images/running128.png"            
        }
    },
    "permissions": ["declarativeContent","storage","tabs","scripting"],
    "host_permissions": ["https://runkeeper.com/exportData"],
    "web_accessible_resources": [
        {
          "resources": [ "conf.json" ],
          "matches": ["<all_urls>"]
        }
    ]
}
